{
  "name": "node-js-github-test",
  "version": "0.3.0",
  "description": "A sample Node.js app using Express 4",
  "engines": {
    "node": "10.x"
  },
  "main": "server/index.js",
  "dependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^4.1.0",
    "create-react-app": "^3.0.1",
    "express": "^4.17.0",
    "https": "^1.0.0",
    "pg": "^7.11.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "mocha": "^6.1.4"
  },
  "scripts": {
    "start": "node server/index.js && cd ./client && npm run build",
